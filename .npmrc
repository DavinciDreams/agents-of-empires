# Enforce pnpm usage - prevents accidental npm/yarn usage
engine-strict=true

# Auto-install peers to avoid manual peer dependency installation
auto-install-peers=true

# Use workspace protocol for local dependencies
link-workspace-packages=true

# Hoist dependencies to avoid duplicate installations
shamefully-hoist=false
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*

# Prevent nested node_modules in submodules
modules-dir=node_modules

# Strict peer dependencies
strict-peer-dependencies=false
